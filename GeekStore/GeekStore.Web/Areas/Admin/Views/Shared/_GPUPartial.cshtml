<div id="table">

</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            debugger;
            $('#table').jtable({
                title: 'All GPUs',
                actions: {
                    listAction: '/Admin/GPU/GetAll',
                    createAction: '/Admin/GPU/Create',
                    updateAction: '/Admin/GPU/Edit',
                    deleteAction: '/Admin/GPU/Delete'
                },
                fields: {
                    ID: {
                        key: true,
                        list: false,
                    },
