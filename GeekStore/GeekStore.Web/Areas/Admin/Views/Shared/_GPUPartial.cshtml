                    Model: {
                        title: 'Model',
                        width: '25%'
                    },
                    Architecture: {
                        title: 'Architecture',
                        width: '10%'
                    },
                    InterfaceWidth: {
                        title: 'Interface Width',
                        width: '14%'
                    },
                    MemoryInterface: {
                        title: 'Memory Interface',
                        width: '14%'
                    },
                    VRAM: {
                        title: 'VRAM',
                        width: '5%'
