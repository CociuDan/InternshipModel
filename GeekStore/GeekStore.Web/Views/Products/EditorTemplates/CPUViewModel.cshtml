@model GeekStore.UI.Models.CPUViewModel

@using (Html.BeginForm("CPU", "CreateProduct", FormMethod.Post, new { @class = "form-horizontal", role = "form", @style = "width:450px;" }))
{
    @Html.AntiForgeryToken()
    <h4 style="text-align:center; padding-left:50px;">Create a new Cooler</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Manufacturer, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control", required = "required", placeholder = "Manufacturer" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Model, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Model, new { @class = "form-control", required = "required", placeholder = "Model" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Cores, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Cores, new { @class = "form-control", required = "required", placeholder = "Model" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Socket, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Socket, new { @class = "form-control", required = "required", placeholder = "Socket" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-3" style="margin-left:159px;">
            <input type="submit" class="btn btn-default" value="Save" style="" />
        </div>
        <div class="col-md-5" style="float:left; margin-left:-25px;">
            <input type="button" id="btnClear" class="btn btn-default" value="Cancel" style="float:left; width:79px;" />
        </div>
    </div>
}