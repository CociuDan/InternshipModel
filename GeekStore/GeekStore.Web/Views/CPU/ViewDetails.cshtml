@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GeekStore.UI.Models.Common.CPUViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>@Model.Manufacturer @Model.Model</h2>
    <div>
        <img src="~/Images/Products/Components/@Model.GetType().ToString().Split('.').Last().Substring(0, Model.GetType().ToString().Split('.').Last().Length - 9)/@Model.Manufacturer @Model.Model .png" alt="Image" style="height:220px; width:60%; margin-left:20%;" />
    </div>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </dt>

            <dd>
                @Html.ValueFor(model => model.Manufacturer)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Model)
            </dt>

            <dd>
                @Html.ValueFor(model => model.Model)
            </dd>

            <dd>
                @Html.ValueFor(model => model.Cores)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cores)
            </dt>

            <dd>
                @Html.ValueFor(model => model.Threads)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Threads)
            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.BaseFrequency)
            </dt>

            <dd>
                @Html.ValueFor(model => model.BaseFrequency)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BoostFrequency)
            </dt>

            <dd>
                @Html.ValueFor(model => model.BoostFrequency)
            </dd>


            <dd>
                @Html.ValueFor(model => model.TDP)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TDP)
            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.Socket)
            </dt>

            <dd>
                @Html.ValueFor(model => model.Socket)
            </dd>

            <dd>
                @Html.ValueFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>

            <dd>
                @Html.EditorFor(model => model.Quantity)
            </dd>

        </dl>
        @Html.HiddenFor(model => model.ID);
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-default">Add To Cart</button>
            <button href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-default">Back</button>
        </div>
    </div>
}