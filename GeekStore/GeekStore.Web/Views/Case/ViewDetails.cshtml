@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GeekStore.UI.Models.Common.CaseViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>@Model.Description</h2>
    <div>
        <img src="~/Images/Products/Components/Cases/@Model.Manufacturer @Model.Model .png" alt="Image" style="height:220px; width:60%; margin-left:20%;" />
    </div>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </dt>

            <dd>
                @Html.ValueFor(model => model.Manufacturer)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Model)
            </dt>

            <dd>
                @Html.ValueFor(model => model.Model)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.ValueFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>

            <dd>
                @Html.EditorFor(model => model.Quantity)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FormFactor)
            </dt>

            <dd>
                @Html.ValueFor(model => model.FormFactor)
            </dd>
        </dl>
        @Html.HiddenFor(model => model.ID);
        <div class="form-actions no-color">
            <button href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-default">Back</button>
            <button type="submit" class="btn btn-default">Add To Cart</button>
        </div>
    </div>
}