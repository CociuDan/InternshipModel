@using Microsoft.AspNet.Identity
@using GeekStore.UI.Models;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MEGA PC</title>
    <link rel="stylesheet" type="text/css" href="~/Content/CSS.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css">
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/")
</head>
<body id="body">
    <div class="container">
        <div id='header'>
            <div id="logo"></div>
            <div id='company-name-div'>
                <a id='company-name' href="@Url.Action("Index", "Home", new { area = ""})"><b>MEGA</b> PC</a>
            </div>
            @{
                if (HttpContext.Current.User.Identity.IsAuthenticated == true)
                {
                    <div id="cart" style="float:right; margin-top:-155px; margin-right:25px;">
                        <a href="@Url.Action("Index", "Cart", new { area = ""})"></a>
                    </div>
                }
            }
            <div id="navbarCollapse" class="collapse navbar-collapse ">
                <ul class="nav navbar-nav">
                    <li class="active"><a id="home" href="@Url.Action("Index", "Home", new { area = ""})">Home</a></li>
                    <li class="dropdown">
                        <a id="components" data-toggle="dropdown" class="dropdown-toggle" href="#">Components <b class="caret"></b></a>
                        <ul role="menu" class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Case", new { area = ""})">Cases</a></li>
                            <li><a href="@Url.Action("Index", "Cooler", new { area = ""})">Coolers</a></li>
                            <li><a href="@Url.Action("Index", "CPU", new { area = ""})">CPUs</a></li>
                            <li><a href="@Url.Action("Index", "Disk", new { area = "" })">Disks</a></li>
                            <li><a href="#">GPUs</a></li>
                            <li><a href="#">Motherboards</a></li>
                            <li><a href="#">PowerUnits</a></li>
                            <li><a href="#">RAM</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a id="pcs" data-toggle="dropdown" class="dropdown-toggle" href="#">PCs<b class="caret"></b></a>
                        <ul role="menu" class="dropdown-menu">
                            <li><a href="#">Laptops</a></li>
                            <li><a href="#">Desktops</a></li>
                            <li><a href="#">Build Desktop</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a id="peripherals" data-toggle="dropdown" class="dropdown-toggle" href="#">Peripherals<b class="caret"></b></a>
                        <ul role="menu" class="dropdown-menu">
                            <li><a href="#">Headphones</a></li>
                            <li><a href="#">Keyboards</a></li>
                            <li><a href="#">Monitors</a></li>
                            <li><a href="#">Mouses</a></li>
                            <li><a href="#">Speakers</a></li>
                        </ul>
                    </li>
                </ul>
                <form role="search" class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" placeholder="Search" class="form-control">
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (Request.IsAuthenticated == true)
                        {
                            <li>
                                <a id="adminPage" href="@Url.Action("Index", "Home", new { area = "Admin" })">@User.Identity.GetUserName()</a>
                            </li>
                                <li><a id="login" href="@Url.Action("LogOff", "Users", new { area = ""})">Log Off</a></li>
                        }
                        else
                        {
                            <li><a id="login" href="@Url.Action("Login", "Users", new { area = ""})">Login</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")

    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("Scripts", required: false)
    @*<script src="~/Scripts/Scripts.js"></script>*@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>
</html>
